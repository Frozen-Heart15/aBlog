<%- include('header') %>

<div class="container topdiv">   
    <%- messages('message_template', locals) %>    
    <h1>Articles</h1>
    <hr>
    <ul class="list-group">
   <% articles.forEach(article=>{ %>
        <li class="list-group-item">
            <h4><%= article.title %></h4>
            <p><%= article.body.substring(0,100) + "..." %><a href="/article/<%= article._id %>">
            Read More </a></p>
             </li>
    <% }) %>
</ul>
</div>

<%- include('footer') %>